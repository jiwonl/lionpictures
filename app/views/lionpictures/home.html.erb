    <header class="series">
        <h2 class="series_title">독립영화 수상작</h2>
    </header>
   
   <div class='photo-grid-container'>
        <div class='photo-grid'>
            
                <%@movies.each do |x|%>
                
                <div class='photo-grid-item first-item'>
                    <a href='/lionpictures/<%=x.id%>'>
                        <img src="<%= x.image.url %>" width="300" height="300">
                    </a>
                    <%=x.title %>
                                </div>
                <%end%>

        </div>
    </div>
    
</section>

